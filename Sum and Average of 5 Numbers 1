import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        int d=sc.nextInt();
        int e=sc.nextInt();
        int Total=a+b+c+d+e;
        float Avg=(float)Total/5;
        System.out.println("Sum of the 5 number is : "+Total);
        System.out.println("Average of the 5 number is : "+Avg);
    }
}
